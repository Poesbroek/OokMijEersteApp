<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OokMijnEersteApp.Drink"
             BackgroundColor="Black">
    <ContentPage.Content>   
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Frame Background="white" WidthRequest="300" CornerRadius="30">
                    <Label Text="{Binding creature.thirst}" TextColor="Black" HorizontalOptions="Center" FontSize="20"></Label>
                </Frame>
            </StackLayout>
            <Label BackgroundColor="Black" Padding="10"></Label>
            <Image Source="VibeoVriend.png" WidthRequest="150" HeightRequest="150" >

            </Image>
            <Label BackgroundColor="Black" Padding="20"></Label>
            <Image Source="{Binding WaterLevel}" WidthRequest="150" HeightRequest="150"></Image>
            <Button Pressed="Button_Pressed" Released="Button_Released" WidthRequest="120" Text="Fill Glass With Water"></Button>

            <Label BackgroundColor="Black" Padding="1"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>