<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OokMijnEersteApp.Sleep"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Frame Background="white" WidthRequest="300" CornerRadius="30">
                    <Label Text="{Binding creature.tired}" TextColor="Black" HorizontalOptions="Center" FontSize="20"></Label>
                </Frame>
            </StackLayout>
            <Label BackgroundColor="Black" Padding="10"></Label>
            <Grid>
                <Image Source="Slaap.png" WidthRequest="400" HeightRequest="400">

                </Image>
            </Grid>
            <Label BackgroundColor="Black" Padding="20"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>